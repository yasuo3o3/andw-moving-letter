<?xml version="1.0"?>
<ruleset name="Moving Letter WPCS">
    <description>WordPress Coding Standards for Moving Letter plugin</description>
    
    <!-- Files to check -->
    <file>.</file>
    
    <!-- Exclude patterns -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>.git/*</exclude-pattern>
    <exclude-pattern>.history/*</exclude-pattern>
    <exclude-pattern>assets/js/*</exclude-pattern>
    <exclude-pattern>assets/css/*</exclude-pattern>
    
    <!-- WordPress Standards -->
    <rule ref="WordPress">
        <!-- Exclude rules that may conflict with plugin structure -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
        <exclude name="Generic.Commenting.DocComment.MissingShort"/>
    </rule>
    
    <rule ref="WordPress-Extra">
        <!-- Allow short open tags in templates -->
        <exclude name="Generic.PHP.DisallowShortOpenTag.EchoFound"/>
    </rule>
    
    <!-- PHP compatibility -->
    <config name="minimum_supported_wp_version" value="6.0"/>
    <config name="testVersion" value="8.0-"/>
    
    <!-- Text domain check -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="moving-letter"/>
            </properties>
        </rule>
</ruleset>